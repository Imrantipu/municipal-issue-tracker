# ==================================
# Issue Tracker Backend - Environment Variables
# ==================================
# Copy this file to .env and update with your values
# NEVER commit .env to Git!

# ==================================
# Database Configuration
# ==================================
POSTGRES_DB=issuetracker
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpassword
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full database URL (constructed from above)
# DATABASE_URL=jdbc:postgresql://${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==================================
# JWT Configuration
# ==================================
# IMPORTANT: Generate a secure secret for production!
# Command: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-please-make-it-very-long

# Token expiration in milliseconds
# 86400000 = 24 hours
# 3600000 = 1 hour
JWT_EXPIRATION=86400000

# ==================================
# Application Configuration
# ==================================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# ==================================
# CORS Configuration
# ==================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==================================
# Logging Configuration
# ==================================
# Levels: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=DEBUG
HIBERNATE_LOG_LEVEL=DEBUG

# ==================================
# Email Configuration (Future)
# ==================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@issuetracker.com

# ==================================
# File Upload Configuration (Future)
# ==================================
# MAX_FILE_SIZE=5MB
# MAX_REQUEST_SIZE=10MB
# UPLOAD_PATH=/tmp/uploads

# ==================================
# Production Settings (Example)
# ==================================
# For production deployment, use these settings:
#
# SPRING_PROFILES_ACTIVE=prod
# LOG_LEVEL=INFO
# HIBERNATE_LOG_LEVEL=WARN
# JWT_EXPIRATION=3600000
# DATABASE_URL=<your-production-database-url>
# JWT_SECRET=<securely-generated-secret>
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com
